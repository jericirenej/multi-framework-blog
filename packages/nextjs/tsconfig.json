{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "paths": {
      "@/api/*": ["../api/src/*"],
      "@/env": ["../env/index.ts"],
      "@/styles/*": ["../styles/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    { "path": "./.storybook/tsconfig.json" }
  ],
  "exclude": ["node_modules"],
  "include": [".next/types/**/*.ts"]
}

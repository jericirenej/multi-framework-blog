{
  "name": "multi-framework-blog",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@eslint/js": "^9.29.0",
      "@types/bun": "latest",
      "argon2": "^0.43.0",
      "date-fns": "^4.1.0",
      "eslint": "^9.29.0",
      "hono": "^4.7.11",
      "jose": "^6.0.11",
      "typescript-eslint": "^8.34.0",
      "typescript": "^5.8.3",
      "uuid": "^11.1.0",
      "zod": "^3.25.67"
    }
  },
  "scripts": {
    "serve": "bun --filter '@/api' serve",
    "seed": "bun --filter '@/db' seed",
    "migrate:rollback": "bun --filter '@/db' migrate:rollback",
    "migrate": "bun --filter '@/db' migrate",
    "check": "bun run ./scripts/check.ts"
  },
  "devDependencies": {
    "@angular/cli": "^20.0.3",
    "@typescript/native-preview": "^7.0.0-dev.20250620.1",
    "zx": "^8.6.0"
  },
  "dependencies": {
    "@/api": "workspace:*",
    "@/db": "workspace:*"
  }
}
